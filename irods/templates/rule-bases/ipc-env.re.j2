# the name of the AMQP exchange where iRODS should publish messages
ipc_AMQP_EXCHANGE: string
ipc_AMQP_EXCHANGE = '{{ _amqp_exchange }}'

# the name of the resource to use for replication by default
ipc_DEFAULT_REPL_RESC: string
ipc_DEFAULT_REPL_RESC = '{{ _irods_default_repl_resource }}'

# the name of the resource to use by default
ipc_DEFAULT_RESC: string
ipc_DEFAULT_RESC = '{{ _irods_default_resource }}'

# the maximum number of concurrent rule engine workers
ipc_MAX_NUM_RE_PROCS: integer
ipc_MAX_NUM_RE_PROCS = {{ _irods_max_num_re_procs }}

# the rule engine host
ipc_RE_HOST: string
ipc_RE_HOST = '{{ _irods_re_host }}'

# the email address where any notifications will be sent
ipc_REPORT_EMAIL_ADDR: string
ipc_REPORT_EMAIL_ADDR = '{{ _report_email_addr }}'

# the local iRODS zone
ipc_ZONE: string
ipc_ZONE = '{{ _irods_zone_name }}'
